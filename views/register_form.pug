extends layout

block content
  h1(style='text-align:center')= title

  div(class='col-sm-3')
  div(class='container col-sm-6')
    form(action='' method='POST')
      div(class='form-group')
        label(for='username') User Name
        input#username.form-control(type='text' name='username' placeholder='Enter userName' required='true')
        br
        label(for='password') Your Password
        input#password.form-control(type='password' name='password' placeholder='Enter password' required='true')
        br
      button.btn.btn-primary.btn-success(type='submit') Register
